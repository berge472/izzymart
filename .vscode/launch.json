{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: FastAPI",
            "type": "debugpy",
            "request": "launch",
            "module": "uvicorn",
            "args": [
                "main:app",
                "--reload",
                "--host",
                "0.0.0.0",
                "--port",
                "8000"
            ],
            "cwd": "${workspaceFolder}/api",
            "env": {
                "MONGO_HOST": "localhost",
                "MONGO_DB_NAME": "app"
            },
            "jinja": true,
            "justMyCode": false,
            "console": "integratedTerminal"
        },
        {
            "name": "Python: FastAPI (Custom Port)",
            "type": "debugpy",
            "request": "launch",
            "module": "uvicorn",
            "args": [
                "main:app",
                "--reload",
                "--host",
                "0.0.0.0",
                "--port",
                "8080"
            ],
            "cwd": "${workspaceFolder}/api",
            "env": {
                "MONGO_HOST": "localhost",
                "MONGO_DB_NAME": "app"
            },
            "jinja": true,
            "justMyCode": false,
            "console": "integratedTerminal"
        },
        {
            "name": "Python: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}/api",
            "env": {
                "MONGO_HOST": "localhost",
                "MONGO_DB_NAME": "app"
            },
            "justMyCode": false
        }
    ]
}
